<h2>Order Details</h2>

@using (Html.BeginForm())
{
     WebGrid grid=new WebGrid(Model ,canPage:false);
    <br />
    <div style="width:350px">
       
        @Html.Label("emplloyee  ID =   ")
        @Html.Label(Session["EmpID"].ToString())
